package Model;

import java.util.ArrayList;

import Control.TextToSpeechAPI;
import Control.TextToSpeechAPIFactory;

public class Line {
	
	private ArrayList<String> words = new ArrayList<String>();
	
	public Line(String line) {
		String s[] = line.split("\\s+");
		for(String i : s) {
			words.add(i);
		}
	}
	
	public String getWords() {
		String line = "";
		for(String word : words) {
			line += word;
		}
		return line;
	}
	
	public void playLine(String API) {
		// Create the factory and the API
		TextToSpeechAPIFactory factory = new TextToSpeechAPIFactory("FreeTTS");
		TextToSpeechAPI text2speech = factory.createAPI();
		// Play the words
		text2speech.play(getWords());
	}
}

