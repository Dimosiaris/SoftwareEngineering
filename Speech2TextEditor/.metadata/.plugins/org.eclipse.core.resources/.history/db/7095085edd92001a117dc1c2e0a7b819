package View;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.SwingConstants;
import javax.swing.JTextField;
import javax.swing.JButton;
import javax.swing.JCheckBox;
import java.awt.event.ActionListener;
import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.awt.event.ActionEvent;

public class Speech2TextEditorView {

	private JFrame frame;
	private JTextField documentPathField;
	private JTextField text2SpeechField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Speech2TextEditorView window = new Speech2TextEditorView();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Speech2TextEditorView() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 758, 479);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		// Document Label
		JLabel lblNewLabel = new JLabel("Document Path:");
		lblNewLabel.setFont(new Font("Arial", Font.PLAIN, 13));
		lblNewLabel.setBounds(18, 94, 103, 16);
		frame.getContentPane().add(lblNewLabel);
		
		// Title Label
		JLabel lblNewLabel_1 = new JLabel("Text 2 Speech Editor");
		lblNewLabel_1.setFont(new Font("Arial", Font.PLAIN, 20));
		lblNewLabel_1.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel_1.setBounds(261, 18, 202, 31);
		frame.getContentPane().add(lblNewLabel_1);
		
		// Document Filename Input
		documentPathField = new JTextField();
		documentPathField.setToolTipText("Enter the document path");
		documentPathField.setBounds(121, 88, 281, 26);
		frame.getContentPane().add(documentPathField);
		documentPathField.setColumns(10);
		
		// Text Input Label
		JLabel lblNewLabel_2 = new JLabel("Text2Speech:");
		lblNewLabel_2.setBounds(18, 328, 103, 16);
		frame.getContentPane().add(lblNewLabel_2);
		
		// Text2Speech Input
		text2SpeechField = new JTextField();
		text2SpeechField.setBounds(121, 283, 281, 107);
		frame.getContentPane().add(text2SpeechField);
		text2SpeechField.setColumns(10);
		
		// Text2Speech Button
		JButton talkButton = new JButton("TALK");
		talkButton.setToolTipText("The editor will convert the text to speech");
		talkButton.setBounds(414, 323, 117, 29);
		frame.getContentPane().add(talkButton);
		
		// Document Talk Button
		JButton okButton = new JButton("TALK");
		okButton.setToolTipText("Enter the document you want to convert to speech");
		okButton.setBounds(414, 88, 117, 29);
		frame.getContentPane().add(okButton);
		
		// Encryption Check Box
		JCheckBox encryptionCheckBox = new JCheckBox("Encryption");
		encryptionCheckBox.setToolTipText("Allow encryption ");
		encryptionCheckBox.setBounds(572, 89, 128, 23);
		frame.getContentPane().add(encryptionCheckBox);
		
		// Open Document Button
		JButton btnNewButton = new JButton("Open Document");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				JFrame docPopup = new JFrame("Document");
				docPopup.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
				docPopup.setBounds(200, 100, 400, 200);
				try {
					String path = documentPathField.getText();
					File file = new File(path); 
					String filename = file.getAbsolutePath();
					FileReader filereader = new FileReader(filename);
					BufferedReader br = new BufferedReader(filereader);
					String contents = "";
					while(br.read() > 0) {
						contents += br.readLine();
					}
					JLabel doc = new JLabel(contents);
					br.close();
					docPopup.add(doc);
					docPopup.setVisible(true);
				}catch(Exception err) {
					err.printStackTrace(); 
				}
			}
		});
		btnNewButton.setBounds(121, 151, 128, 29);
		frame.getContentPane().add(btnNewButton);
		
		// Edit Document Button
		JButton btnNewButton_1 = new JButton("Edit Document");
		btnNewButton_1.setBounds(263, 151, 128, 29);
		frame.getContentPane().add(btnNewButton_1);
	}
}
