import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.SwingConstants;
import javax.swing.JTextField;
import javax.swing.JButton;
import javax.swing.JCheckBox;

public class Speech2TextEditorView {

	private JFrame frame;
	private JTextField documentPathField;
	private JTextField text2SpeechField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					Speech2TextEditorView window = new Speech2TextEditorView();
					window.frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the application.
	 */
	public Speech2TextEditorView() {
		initialize();
	}

	/**
	 * Initialize the contents of the frame.
	 */
	private void initialize() {
		frame = new JFrame();
		frame.setBounds(100, 100, 527, 359);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.getContentPane().setLayout(null);
		
		// DOCUMENT LABEL
		JLabel lblNewLabel = new JLabel("Document Path:");
		lblNewLabel.setFont(new Font("Arial", Font.PLAIN, 13));
		lblNewLabel.setBounds(18, 94, 103, 16);
		frame.getContentPane().add(lblNewLabel);
		
		// TITLE Label
		JLabel lblNewLabel_1 = new JLabel("Text 2 Speech Editor");
		lblNewLabel_1.setFont(new Font("Arial", Font.PLAIN, 20));
		lblNewLabel_1.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel_1.setBounds(152, 19, 202, 31);
		frame.getContentPane().add(lblNewLabel_1);
		
		// DOCUMENT FILENAME INPUT
		documentPathField = new JTextField();
		documentPathField.setBounds(121, 88, 281, 26);
		frame.getContentPane().add(documentPathField);
		documentPathField.setColumns(10);
		
		// TEXT INPUT LABEL
		JLabel lblNewLabel_2 = new JLabel("Text2Speech:");
		lblNewLabel_2.setBounds(18, 136, 103, 16);
		frame.getContentPane().add(lblNewLabel_2);
		
		// TEXT2SPEECH INPUT
		text2SpeechField = new JTextField();
		text2SpeechField.setBounds(121, 126, 281, 107);
		frame.getContentPane().add(text2SpeechField);
		text2SpeechField.setColumns(10);
		
		// TEXT2SPEECH BUTTON
		JButton talkButton = new JButton("TALK");
		talkButton.setToolTipText("The editor will convert the text to speech");
		talkButton.setBounds(404, 166, 117, 29);
		frame.getContentPane().add(talkButton);
		
		// DOCUMENT FILE OK BUTTON
		JButton okButton = new JButton("OK");
		okButton.setToolTipText("Enter the document you want to convert to speech");
		okButton.setBounds(404, 88, 117, 29);
		frame.getContentPane().add(okButton);
		
		// Encryption check box
		JCheckBox encryptionCheckBox = new JCheckBox("Encryption");
		encryptionCheckBox.setToolTipText("Allow encryption ");
		encryptionCheckBox.setBounds(18, 264, 128, 23);
		frame.getContentPane().add(encryptionCheckBox);
	}
}
