		lblNewLabel.setFont(new Font("Lucida Sans", Font.BOLD, 16));
		lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel.setBounds(45, 139, 131, 33);
		add(lblNewLabel);
		
		JRadioButton rot13RadioButton = new JRadioButton("Rot 13");
